<div class="container">
<h1 class="display-1">Burgers!</h1>
<br>
<div class="container">
  
<div class="container-fluid">
  <div class="row">
    <div class="col">
      <h2>Burgers you haven't eaten!</h2>

      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=true}}
        {{/unless}}
        {{/each}}
      </ul>

    </div>
    <div class="col">
      <h2>Burgers you have eaten!</h2>

      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devoured=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

</div>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burger">Burger Name:</label>
    <input type="text" id="burger" name="name">
  </div>


<br>
<hr>
  <div class="form-group">
    <label for="burger">Eaten?</label><br>
    <input type="radio" name="devoured" value="1" checked> Eaten!<br>
    <input type="radio" name="devoured" value="0"> Not eaten
  </div>


  <button type="submit">Add Burger</button>
</form>

</div>
</div>